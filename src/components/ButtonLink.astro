---
interface Props {
  link: string;
  label: string;
  style?: "primary" | "secondary";
  anchorTarget?: "_blank" | "_self" | "_parent" | "_top" | "framename";
}

const { link, label, style = "primary", anchorTarget = "_self" } = Astro.props;

const baseClasses = "border px-4 py-2 border-slate-800 rounded";
const styleClasses =
  style === "primary" ? "bg-slate-800 text-white" : "bg-white text-slate-800";
---

<button>
  <a
    href={link}
    class={`${baseClasses} ${styleClasses}`}
    target={anchorTarget}>
    {label}
  </a>
</button>
