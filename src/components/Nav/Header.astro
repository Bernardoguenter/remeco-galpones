---
import { Picture } from "astro:assets";
import Nav from "./Nav.astro";
import logoRemeco from "@assets/images/LogoRemecoBlanco.png";
---

<header
  class="h-20 py-2 px-4 lg:px-20 w-full flex justify-between items-center bg-slate-900">
  <a
    href="/"
    title={"Metalúrgica Remeco"}
    ><Picture
      src={logoRemeco}
      alt="Logo Metalúrgica Remecó"
      class="max-w-[150px]"
      layout="constrained"
      width={800}
      height={800}
    /></a
  >
  <Nav />
</header>
